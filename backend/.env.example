# Application
APP_NAME="AstroMusic API"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8001
API_PORT=8001

# Database - Neo4j
# For external Neo4j: use bolt://host.docker.internal:7687 or bolt://localhost:7687
# For Docker Neo4j: use bolt://neo4j:7687
NEO4J_URI=bolt://host.docker.internal:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=astromusic123
NEO4J_DATABASE=neo4j

# Neo4j Docker ports (only if starting Neo4j container)
NEO4J_HTTP_PORT=7475
NEO4J_BOLT_PORT=7688

# Security
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:*"]

# File Storage (for future music files)
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# API Keys (for future AI music generation)
MUSIC_GEN_API_KEY=your-music-gen-api-key-here
MUSIC_GEN_API_URL=https://api.musicgen.example.com
